                    android:text="-" />-->
                <TextView
                    android:id="@+id/order_quantity"
                    style="@style/text_button_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="normal"
                    android:text="0" />
